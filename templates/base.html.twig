<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>
            {% block title %}Scandidecor{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css"/>
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}"/>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
            <link rel="shortcut icon" href="{{ asset('images/logo.PNG') }}" type="images/x-icon"/>
        {% endblock %}
    </head>
    <body>
</nav>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_accueil') }}">
                    <img src="{{ asset('images/logo.PNG') }}" class="navbar-brand logo-img" alt="logo de la marque">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor04" aria-controls="navbarColor04" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor04">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_accueil') }}">
                                Accueil
                                <span class="visually-hidden">(current)</span>
                            </a> 
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Produits</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('app_nouveaute') }}">Nouveautés</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_plante') }}">Plante artificielle</a>
                                <a class="dropdown-item" href="{{ path('app_chaise') }}">Chaise</a>
                                <a class="dropdown-item" href="{{path('app_table')}}">Table</a>
                                <a class="dropdown-item" href="{{ path('app_lit') }}">Lit</a>
                                <a class="dropdown-item" href="{{ path('app_tabledenuit') }}">Table de nuit</a>
                                <a class="dropdown-item" href="{{ path('app_decoration') }}">Décoration</a>
                                <a class="dropdown-item" href="{{ path('app_meubletele') }}">Meuble de télévision</a>
                                <a class="dropdown-item" href="{{ path('app_commode') }}">Commode</a>
                                <a class="dropdown-item" href="{{ path('app_armoire') }}">Armoire</a>
                                <a class="dropdown-item" href="{{ path('app_buffet') }}">Buffet</a>
                                <a class="dropdown-item" href="{{ path('app_canape') }}">Canapé</a>
                                <a class="dropdown-item" href="{{ path('app_luminaire') }}">Luminaire</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="{{ path('app_contact') }}" role="button" aria-haspopup="true" aria-expanded="false">Contact</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('app_contact') }}">Contact</a>
                                <a class="dropdown-item" href="#">Mentions légales</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex" action="{{ path('app_search') }}" method="get">
                        <input class="form-control me-sm-2" type="search" name="q" placeholder="Que recherchez-vous" required>
                        <button class="rechercher" type="submit">Rechercher</button>
                    </form>
                    <ul class="navbar-nav me-auto">
                        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-person"></i><span class="small-textconnect">Se connecter</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}"><i class="bi bi-person-plus"></i><span class="small-textdisconnect">S'inscrire</span></a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_client', {'id': app.user.id}) }}">
                                    <i class="bi bi-person"></i><span class="small-text">Profil</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <i class="bi bi-person-x"></i><span class="small-text">Déconnexion</span>
                                </a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_voirpanier') }}">
                                <i class="bi bi-cart3"></i><span class="small-text">Panier</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        {% block body %}
        {% endblock %}
        {% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
{% endblock %}
    </body>
</html>
